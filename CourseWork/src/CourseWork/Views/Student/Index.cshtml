@model IEnumerable<CourseWork.Models.Student>

<h2>Students</h2>

<div class="row">
    <a class="btn btn-success" role="button"><i class="glyphicon glyphicon-plus"></i> Add</a>
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Student Code</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    <td>@student.StudentCode</td>
                    <td class="text-right">
                        <a class="btn btn-default btn-sm" title="Student details"><i class="glyphicon glyphicon-info-sign"></i></a>
                        <a class="btn btn-warning btn-sm" title="Edit student"><i class="glyphicon glyphicon-pencil"></i></a>
                        @*When changing data use POST HTTP request*@
                        <a class="btn btn-danger btn-sm btn-remove-student cw-post-link" href="#" title="Remove student" data-confirm-text="Are you sure you want to remove the student?">
                            <i class="glyphicon glyphicon-remove"></i>
                            <form asp-action="Remove">
                                <input type="hidden" name="id" value="@student.Id" />
                            </form>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
