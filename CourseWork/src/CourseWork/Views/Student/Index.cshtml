@model IEnumerable<CourseWork.Models.Student>

<h2>Students</h2>

<div class="row">
    <a class="btn btn-success" role="button"><i class="glyphicon glyphicon-plus"></i> Add</a>
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Student Code</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    <td>@student.StudentCode</td>
                    <td class="text-right">
                        <a class="btn btn-default btn-sm" title="Student details"><i class="glyphicon glyphicon-info-sign"></i></a>
                        <a class="btn btn-warning btn-sm" title="Edit student"><i class="glyphicon glyphicon-pencil"></i></a>
                        <a class="btn btn-danger btn-sm" title="Remove student"><i class="glyphicon glyphicon-remove"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
